pkgname=abyss-base
pkgver=2
pkgrel=2
pkgdesc="Abyss OS base package"
url="https://abyss.run"
arch="noarch"
license="MIT"
options="!fhs !check"
source="crontab
	color_prompt
	group
	passwd
	profile
	protocols
	services
	"
builddir="$srcdir/build"

case "$CARCH" in
    x86_64) depends_arch="" ;;
    aarch64) depends_arch="" ;;
    mips64*) depends_arch="" ;;
    riscv64) depends_arch="" ;;
    powerpc64*) depends_arch="" ;;
esac

depends="musl abyss-keyring apk-tools busybox ca-certificates dhcpcd openrc $depends_arch"

prepare() {
	mkdir -p "$builddir"
}

build() {
	cd "$builddir"

	# generate shadow
	awk -F: '{
		pw = ":!:"
		if ($1 == "root") { pw = "::" }
		print($1 pw ":0:::::")
	}' "$srcdir"/passwd > shadow
}

package() {
	mkdir -p "$pkgdir"
	cd "$pkgdir"
	install -m 0755 -d \
		dev \
		dev/pts \
		dev/shm \
		etc \
		etc/apk \
		etc/conf.d \
		etc/crontabs \
		etc/init.d \
		etc/modprobe.d \
		etc/modules-load.d \
		etc/periodic/15min \
		etc/periodic/daily \
		etc/periodic/hourly \
		etc/periodic/monthly \
		etc/periodic/weekly \
		etc/profile.d \
		etc/sysctl.d \
		home \
		usr/lib/firmware \
		usr/lib/mdev \
		mnt \
		proc \
		run \
		sys \
		usr/bin \
		usr/share \
		usr/share/man \
		usr/share/misc \
		var/cache \
		var/cache/misc \
		var/lib \
		var/lib/misc \
		var/local \
		var/lock/subsys \
		var/log \
		var/opt \
		var/spool \
		var/spool/cron

	ln -s /run var/run
	install -d -m 0555 var/empty
	install -d -m 0700 "$pkgdir"/root
	install -d -m 1777 "$pkgdir"/tmp "$pkgdir"/var/tmp

	install -m600 "$srcdir"/crontab "$pkgdir"/etc/crontabs/root
	install -m655 "$srcdir"/color_prompt "$pkgdir"/etc/profile.d/color_prompt.sh

	echo "localhost" > "$pkgdir"/etc/hostname
	cat > "$pkgdir"/etc/hosts <<-EOF
		127.0.0.1	localhost localhost.localdomain
		::1		localhost localhost.localdomain
	EOF
	cat > "$pkgdir"/etc/modules <<-EOF
		af_packet
		ipv6
	EOF
	cat > "$pkgdir"/etc/shells <<-EOF
		# valid login shells
		/bin/sh
		/bin/ash
	EOF
	cat > "$pkgdir"/etc/motd <<-EOF
		Welcome to Abyss, how brave are you feeling today?

	EOF
	cat > "$pkgdir"/etc/sysctl.conf <<-EOF
		# content of this file will override /etc/sysctl.d/*
	EOF
	cat > "$pkgdir"/etc/sysctl.d/00-abyss.conf <<-EOF
		kernel.panic = 120

		fs.protected_hardlinks = 1
		fs.protected_symlinks = 1
	EOF

	install -m644 \
		"$srcdir"/group \
		"$srcdir"/passwd \
		"$srcdir"/profile \
		"$srcdir"/protocols \
		"$srcdir"/services \
		"$pkgdir"/etc/

	install -m744 "$builddir"/shadow \
		"$pkgdir"/etc/

	cat > "$pkgdir"/etc/os-release <<-EOF
		NAME="Abyss OS"
		ID=abyss
		VERSION_ID=rolling
		PRETTY_NAME="Abyss OS rolling"
		HOME_URL="https://abyss.run"
		BUG_REPORT_URL="https://github.com/abyss-os/phase1/issues"
		ABYSS_ARCH=$CTARGET_ARCH
		ABYSS_ENDIAN=$CTARGET_ENDIAN
	EOF
	# ^ these make little sense being ABYSS_ prefixed, but if we follow the spec they should be, apparently

	echo rolling > "$pkgdir"/etc/abyss-release

	# symlinks
	ln -s /etc/crontabs "$pkgdir"/var/spool/cron/crontabs
	ln -s ../proc/self/mounts "$pkgdir"/etc/mtab

	# add lib symlinks
	ln -vs usr/lib lib
	# add bin symlinks
	ln -vs usr/bin bin
	ln -vs usr/bin sbin
	ln -vs bin usr/sbin
}


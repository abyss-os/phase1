pkgname=c-ares
pkgver=1.17.2
pkgrel=0
pkgdesc="An asynchronously DNS/names resolver library"
url="https://c-ares.haxx.se/"
arch="all"
license="MIT"
subpackages="$pkgname-doc $pkgname-dev"
source="https://c-ares.haxx.se/download/$pkgname-$pkgver.tar.gz"
options="!check" # no tests since they're still broken and produce arbitary results

prepare() {
	default_prepare
	sed -i '/^TEST_P(MockChannelTest, HostAliasUnreadable) {$/,/^}$/d' test/ares-test-mock.cc
}

build() {
	PATH_SEPARATOR=: ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--enable-shared
	make
}

check() {
	make -C test check
}


package() {
	make -j1 DESTDIR="$pkgdir" install
}

b2sums="c6f5ad65ca75f8467b624daf3caaee2f35d6e4714ce46ebe1bbf79447feecf8615915b00fa5e7bd1e97c6232864e06c53a792fbadf36a5399883529769273e24  c-ares-1.17.2.tar.gz"

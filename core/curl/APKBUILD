pkgname=curl
pkgver=7.78.0
pkgrel=1
pkgdesc="URL retrival utility and library"
url="https://curl.haxx.se/"
arch="all"
license="MIT"
depends="ca-certificates"
checkdepends="python3"
makedepends="openssl-dev nghttp2-dev zlib-dev autoconf automake libtool perl"
subpackages="$pkgname-doc $pkgname-dev"
source="https://curl.haxx.se/download/$pkgname-$pkgver.tar.xz"
options="!check"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--enable-ipv6 \
		--enable-unix-sockets \
		--enable-static \
		--without-libidn \
		--without-libidn2 \
		--with-nghttp2 \
		--disable-ldap \
		--with-pic \
        --with-openssl \
        --without-zstd
	make
}

check() {
	make -C tests nonflaky-test
}

package() {
	make install DESTDIR="$pkgdir"
}

b2sums="0422071ce22d38b89652c702989674a2257dd18b05004245c4f2d7494ccdd24b5b52f330629ce6a411a059d5990e8c879cbbdf23d873b881141f9d2b9ad07f7f  curl-7.78.0.tar.xz"

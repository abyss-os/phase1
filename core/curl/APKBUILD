pkgname=curl
pkgver=7.78.0
pkgrel=0
pkgdesc="URL retrival utility and library"
url="https://curl.haxx.se/"
arch="all"
license="MIT"
depends="ca-certificates"
checkdepends="python3"
makedepends="openssl-dev nghttp2-dev zlib-dev autoconf automake libtool perl"
subpackages="$pkgname-doc $pkgname-dev"
source="https://curl.haxx.se/download/$pkgname-$pkgver.tar.xz"
options="!check"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--enable-ipv6 \
		--enable-unix-sockets \
		--enable-static \
		--without-libidn \
		--without-libidn2 \
		--with-nghttp2 \
		--disable-ldap \
		--with-pic \
        --with-openssl \
        --without-zstd
	make
}

check() {
	make -C tests nonflaky-test
}

package() {
	make install DESTDIR="$pkgdir"
}

b2sums="433b3179dcf2c3363514b72bf9c54286873d8e5559b33e543ba8f3e7df25a619c5be13a8aacb9361c4464b646af4d1fb214d4de57a17f3de7e8f379777214d13  curl-7.77.0.tar.xz"

pkgname=curl
pkgver=7.75.0
pkgrel=0
pkgdesc="URL retrival utility and library"
url="https://curl.haxx.se/"
arch="all"
license="MIT"
depends="ca-certificates"
checkdepends="python3"
makedepends="openssl-dev nghttp2-dev zlib-dev autoconf automake libtool perl zstd-dev"
subpackages="$pkgname-doc $pkgname-dev"
source="https://curl.haxx.se/download/$pkgname-$pkgver.tar.xz"

prepare() {
	default_prepare
	autoreconf -vfi
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--enable-ipv6 \
		--enable-unix-sockets \
		--enable-static \
		--without-libidn \
		--without-libidn2 \
		--with-nghttp2 \
		--disable-ldap \
		--with-pic
	make
}

check() {
	make -C tests nonflaky-test
}

package() {
	make install DESTDIR="$pkgdir"
}

b2sums="74889ede1b57a6685eef0f504d4c261c0b271b36ab3290bfc895efe9a6fffe4bfd433eaae438cd2b54a920671a2ebc2ca5e73bd88f6be40b4f46ef281028f1d8  curl-7.75.0.tar.xz"

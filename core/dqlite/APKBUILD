pkgname="dqlite"
pkgver="1.7.0"
pkgrel=0
pkgdesc="dqlite"
url="https://dqlite.io"
arch="all"
license="LGPLv3"
depends="sqlite raft libuv-dev"
makedepends="autoconf automake sqlite-dev raft-dev libuv-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver::https://github.com/canonical/dqlite/archive/v${pkgver}.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd $builddir
	autoreconf -if
	./configure --prefix=/usr
	make
}

package() {
	cd $builddir
	make DESTDIR=$pkgdir install
}

b2sums="3eeaaf5bbadfc09803e70d38fcd3ab23c212dc2700ad8ecdde720932b0ad2e32016503eaa8a738139a178bb926a7818497629699ec68eec8c2111f377b40b4a3  dqlite-1.7.0"

pkgname="dqlite"
pkgver="1.4.4"
pkgrel=0
pkgdesc="libco is a cooperative multithreading library written in C89."
url="https://dqlite.io"
arch="all"
license="LGPLv3"
depends="libco sqlite raft libuv-dev"
makedepends="autoconf automake libco-dev sqlite-dev raft-dev libuv-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver::https://github.com/canonical/dqlite/archive/v${pkgver}.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd $builddir
	autoreconf -if
	./configure --prefix=/usr
	make
}

package() {
	cd $builddir
	make DESTDIR=$pkgdir install
}

b2sums="4a516c56f506b5eebf4b199339a92afb05b6928027498e8a34d8b346abaf78312d181a706f5943958983696c495b58281e56264c355b27d4fc41891d30085dce  dqlite-1.4.4"

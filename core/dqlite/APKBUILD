pkgname="dqlite"
pkgver="1.5.0"
pkgrel=0
pkgdesc="libco is a cooperative multithreading library written in C89."
url="https://dqlite.io"
arch="all"
license="LGPLv3"
depends="libco sqlite raft libuv-dev"
makedepends="autoconf automake libco-dev sqlite-dev raft-dev libuv-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver::https://github.com/canonical/dqlite/archive/v${pkgver}.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd $builddir
	autoreconf -if
	./configure --prefix=/usr
	make
}

package() {
	cd $builddir
	make DESTDIR=$pkgdir install
}

b2sums="31f9e5fa377661665c03a897fe535ad6acc7078d9485fd8764c6cd27ed40d97a97a9155934c9a84ef0befd65d40fdcf5b9441d67b49d2435749c399598ae1183  dqlite-1.5.0"

pkgname="dqlite"
pkgver="1.6.0"
pkgrel=0
pkgdesc="libco is a cooperative multithreading library written in C89."
url="https://dqlite.io"
arch="all"
license="LGPLv3"
depends="libco sqlite raft libuv-dev"
makedepends="autoconf automake libco-dev sqlite-dev raft-dev libuv-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver::https://github.com/canonical/dqlite/archive/v${pkgver}.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd $builddir
	autoreconf -if
	./configure --prefix=/usr
	make
}

package() {
	cd $builddir
	make DESTDIR=$pkgdir install
}

b2sums="97a49f78f1b6af5ff5abfe6c5e1e3eec67cc1da4bd9c49b785e6fff60e5fd39fa1f479269ec098935ebb7fbbca6346859b54bd0c9b8f428557e2768da938da0c  dqlite-1.6.0"

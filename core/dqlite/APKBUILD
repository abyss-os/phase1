pkgname="dqlite"
pkgver="1.8.0"
pkgrel=0
pkgdesc="dqlite"
url="https://dqlite.io"
arch="all"
license="LGPLv3"
depends="sqlite raft libuv-dev"
makedepends="autoconf automake sqlite-dev raft-dev libuv-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver::https://github.com/canonical/dqlite/archive/v${pkgver}.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd $builddir
	autoreconf -if
	./configure --prefix=/usr
	make
}

package() {
	cd $builddir
	make DESTDIR=$pkgdir install
}

b2sums="0e3bc8badf6b7e0447eebd86069785dca51c4dfda527ee7b838da971830ad65e443c130484b25c901aee5ac4e14c81df84756734aac3fd58a2fdbc67a664c1fb  dqlite-1.8.0"

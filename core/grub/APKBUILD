pkgname=grub
pkgver=2.06
pkgrel=0
pkgdesc="grub bootloader (efi)"
url="https://www.gnu.org/software/grub/"
arch="x86_64 ppc64le"
license="GPL-3.0-or-later"
#depends="mkinitfs"
triggers="grub.trigger=/boot"
makedepends="linux-dev xz-dev lvm2-dev python3 freetype-dev gettext-tiny zfs-dev"
options="!check"
subpackages="$pkgname-dev $pkgname-doc"

case "$CARCH" in
	x86_64|aarch64) target="efi" target_conf="--disable-efiemu";;
	ppc64le) target="ieee1275"; makedepends="$makedepends powerpc-utils" ;;
esac

source="https://ftp.gnu.org/gnu/grub/grub-$pkgver.tar.xz
	abyss-mkconfig.patch
	lang-C.UTF-8.patch"

prepare() {
	default_prepare
	PYTHON=python3 ./autogen.sh
}

build() {
	mkdir -p "$srcdir"/build
	cd "$srcdir"/build
	export BUILD_CC=$CC
	$builddir/configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-nls \
		--disable-werror \
		--sbindir=/usr/bin \
        --with-platform=$target \
	    $target_conf

	make -j${JOBS}
}

package() {
    cd "$srcdir"/build
    make DESTDIR="$pkgdir" install-strip

	rm -f "$pkgdir"/usr/lib/charset.alias
	# remove grub-install warning of missing directory
	mkdir -p "$pkgdir"/usr/share/locale

	mkdir -p "$pkgdir"/etc/default/
	cat >"$pkgdir"/etc/default/grub <<-EOF
    GRUB_DISTRIBUTOR="Abyss OS"
    GRUB_TIMEOUT=2
    GRUB_DISABLE_SUBMENU=y
    GRUB_DISABLE_RECOVERY=true
    GRUB_CMDLINE_LINUX_DEFAULT=""
    GRUB_CMDLINE_LINUX=""
	EOF
}

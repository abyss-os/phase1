# this is a mess, needs to be rewritten
pkgname=iptraf-ng
pkgver=1.1.4
pkgrel=0
pkgdesc="An IP Network Monitoring tool"
url="https://fedorahosted.org/iptraf-ng/"
arch="all"
license="GPL-2.0"
makedepends="ncurses-dev linux-dev"
subpackages="$pkgname-doc"
source="http://pkgs.fedoraproject.org/repo/pkgs/iptraf-ng/$pkgname-$pkgver.tar.gz/de27cfeeede96e2acfb0edc8439b034a/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/iptraf-ng-$pkgver
prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	CFLAGS="$CFLAGS -D_GNU_SOURCE -std=gnu99" ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sbindir=/usr/bin
	make
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

b2sums="c06fdc25838901fc5528057ade5ebe28b5679a6a545f461cef2a5f4d3cbc1346a7ab3e94f4fe317a1760067e480c3c622df1027591d978b0ac1236ba9203e9da  iptraf-ng-1.1.4.tar.gz"

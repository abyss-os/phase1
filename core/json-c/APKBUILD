pkgname=json-c
pkgver=0.15
pkgrel=0
pkgdesc="A JSON implementation in C"
url="https://github.com/json-c/json-c/wiki"
arch="all"
license="MIT"
makedepends="cmake samurai"
subpackages="$pkgname-dev"
source="https://s3.amazonaws.com/${pkgname}_releases/releases/$pkgname-${pkgver}.tar.gz"
builddir="$srcdir"/json-c-$pkgver

build() {
	mkdir -p build && cd build
	cmake -G Ninja -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib -DBUILD_SHARED_LIBS=On -DBUILD_STATIC_LIBS=On -DENABLE_RDRAND=On -DENABLE_THREADING=On ..
	cmake --build .
}

check() {
	cd build
	cmake --check .
}

package() {
	cd build
	DESTDIR=$pkgdir cmake --install .
}

b2sums="ae34f6dd45ebee55e6413ecb234e48fa5ae1c17e6fa12462aaaa04e8801457060e176abe90d76d04ad0ee9b903ff467bc3b8ed5816792da175aad8862b9d168e  json-c-0.15.tar.gz"

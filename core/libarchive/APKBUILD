pkgname=libarchive
pkgver=3.5.1
pkgrel=3
pkgdesc="library that can create and read several streaming archive formats"
url="https://libarchive.org/"
arch="all"
license="BSD-2-Clause BSD-3-Clause Apache-2.0"
makedepends="acl-dev bzip2-dev expat-dev lz4-dev openssl-dev xz-dev zlib-dev zstd-dev samurai"
subpackages="$pkgname-dev $pkgname-doc bsdtar bsdcpio bsdcat"
source="https://www.libarchive.org/downloads/$pkgname-$pkgver.tar.gz"

build () {
    cmake -G Ninja -DCMAKE_INSTALL_PREFIX=/usr \
        -DENABLE_MBEDTLS=OFF \
        -DENABLE_NETTLE=OFF \
        -DENABLE_OPENSSL=ON \
        -DENABLE_LIBB2=OFF \
        -DENABLE_LZ4=ON \
        -DENABLE_LZO=ON \
        -DENABLE_LZMA=ON \
        -DENABLE_ZSTD=ON \
        -DENABLE_ZLIB=ON \
        -DENABLE_BZip2=ON \
        -DENABLE_EXPAT=ON \
        -DENABLE_LIBXML2=OFF \
        -DENABLE_LibGCC=OFF \
        -DENABLE_XATTR=ON \
        -DENABLE_ACL=ON \
        -DENABLE_ICONV=ON \
        -DENABLE_TAR_SHARED=OFF \
        -DENABLE_CPIO_SHARED=OFF \
        -DENABLE_CAT_SHARED=OFF \
        -DENABLE_INSTALL=ON \
    .

    ninja -j${JOBS}
}

package() {
	DESTDIR="$pkgdir" ninja install
}

bsdtar() {
	pkgdesc="bsdtar from libarchive"

	mkdir -p "$subpkgdir"/usr/bin
	mv "$pkgdir"/usr/bin/bsdtar "$subpkgdir"/usr/bin/
}

bsdcpio() {
	pkgdesc="bsdcpio from libarchive"

	mkdir -p "$subpkgdir"/usr/bin
	mv "$pkgdir"/usr/bin/bsdcpio "$subpkgdir"/usr/bin/
}

bsdcat() {
	pkgdesc="bsdcat from libarchive"

	mkdir -p "$subpkgdir"/usr/bin
	mv "$pkgdir"/usr/bin/bsdcat "$subpkgdir"/usr/bin/
}


pkgname=libgpg-error
pkgver=1.38
pkgrel=0
pkgdesc="Support library for libgcrypt"
url="http://www.gnupg.org"
arch="all"
license="GPL-2.0-or-later LGPL-2.1-or-later"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lisp:lisp:noarch"
makedepends="automake autoconf"
source="https://gnupg.org/ftp/gcrypt/$pkgname/$pkgname-$pkgver.tar.bz2"

prepare() {
	default_prepare
	aclocal
	automake
}

build () {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-static \
		--disable-nls
	make
}

check() {
	make -C "$builddir" check
}

package() {
	cd "$builddir"
	make -j1 DESTDIR="$pkgdir" install
}

lisp() {
	mkdir -p "$subpkgdir"/usr/
	mv "$pkgdir"/usr/share "$subpkgdir"/usr/share/
}

b2sums="9532402466748503805366b94c82c9adfe5b448f885c26b33ebf7ba9957161ca046b4057f5ca862224accb9f2af731652a55d20e7a4ab69107190a58c8e11ad6  libgpg-error-1.38.tar.bz2"

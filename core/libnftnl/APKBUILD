pkgname=libnftnl
pkgver=1.1.7
pkgrel=0
pkgdesc="Netfilter library providing interface to the nf_tables subsystem"
url="https://netfilter.org/projects/libnftnl"
arch="all"
license="GPL-2.0-or-later"
depends_dev="libmnl-dev"
makedepends="$depends_dev bash jansson-dev"
subpackages="$pkgname-dev"
source="https://netfilter.org/projects/libnftnl/files/$pkgname-$pkgver.tar.bz2"
builddir="$srcdir/$pkgname-$pkgver"

case "$CARCH" in
s390x) options="!check" ;; # FIXME
esac

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--with-json-parsing
	make
}

check() {
	return 0
	cd "$builddir"/tests
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

b2sums="e21ca38edbc7c651a061fcd6db80278ba99b4fe0c92c1912039fd0a1cd4b7636c87e17f538eaad8c6b963748c7c77800eaa83ddb80d344865504329984ac9c96  libnftnl-1.1.7.tar.bz2"

pkgname=libuv
pkgver=1.38.1
pkgrel=0
pkgdesc="Cross-platform asychronous I/O"
url="https://libuv.org"
arch="all"
license="MIT BSD ISC"
makedepends="automake autoconf libtool linux-dev"
subpackages="$pkgname-dev"
source="https://dist.libuv.org/dist/v$pkgver/$pkgname-v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-v$pkgver"

prepare() {
	default_prepare
	cd "$builddir"
	sh autogen.sh
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make CFLAGS="$CFLAGS -D__USE_MISC" BUILDTYPE=Release
}

check() {
	cd "$builddir"
	return 0
	# see https://github.com/libuv/libuv/issues/2307
	case $CARCH in
		x86*)
			if test $DRONE; then
				sed -i "s/TEST_.*(ipc_closed_handle)//g" test/test-list.h
			fi
		;;
	esac

	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
	install -Dm644 LICENSE \
		"$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

b2sums="cc7b6a576dd2fc94a97b5ae0969e4f79a06f729b419c7e263c5adc4a629eb006e20bfb3e48be36351b8b28e1a3a4b027d8685f8c731de182418d822a9ee65c2a  libuv-v1.38.1.tar.gz"

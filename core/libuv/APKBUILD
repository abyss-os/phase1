pkgname=libuv
pkgver=1.34.2
pkgrel=0
pkgdesc="Cross-platform asychronous I/O"
url="https://libuv.org"
arch="all"
license="MIT BSD ISC"
makedepends="automake autoconf libtool linux-dev
subpackages="$pkgname-dev"
source="https://dist.libuv.org/dist/v$pkgver/$pkgname-v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-v$pkgver"

prepare() {
	default_prepare
	cd "$builddir"
	sh autogen.sh
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make CFLAGS="$CFLAGS -D__USE_MISC" BUILDTYPE=Release
}

check() {
	cd "$builddir"
	return 0
	# see https://github.com/libuv/libuv/issues/2307
	case $CARCH in
		x86*)
			if test $DRONE; then
				sed -i "s/TEST_.*(ipc_closed_handle)//g" test/test-list.h
			fi
		;;
	esac

	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
	install -Dm644 LICENSE \
		"$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

b2sums="47040e3ea742229de8c113f4763cb3bcb257d38e35dc36bee31a7c417e3f54a499b1f372453286e5bb0f6b75181e1f5694936e81a28db10195bda9fb99f23906  libuv-v1.34.2.tar.gz"

pkgname=nano
pkgver=5.6.1
pkgrel=0
pkgdesc="Enhanced clone of the Pico text editor"
url="https://www.nano-editor.org"
arch="all"
license="GPL-3.0-or-later"
makedepends="file-dev linux-dev ncurses-dev"
subpackages="$pkgname-doc"
source="https://www.nano-editor.org/dist/v${pkgver%%.*}/$pkgname-$pkgver.tar.xz"
#builddir="$srcdir/$pkgname-$pkgver"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-nls
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 doc/sample.nanorc \
		"$pkgdir"/etc/nanorc

	# Proper syntax highlighting for APKBUILDs
	sed -i "/syntax/s/\"$/\" \"APKBUILD&/" \
		"$pkgdir"/usr/share/nano/sh.nanorc

	rm -rf "$pkgdir"/usr/lib/charset.alias
}

b2sums="56eafe040a133e7136658951651c35db259dbfff3d0a4f1c83a3739b77094acb183401ff53718f0841fc3f5ef4163d8ee21c7f25c9223016ab4cb5202d10f68c  nano-5.6.1.tar.xz"

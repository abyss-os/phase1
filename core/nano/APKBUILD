pkgname=nano
pkgver=5.8
pkgrel=0
pkgdesc="Enhanced clone of the Pico text editor"
url="https://www.nano-editor.org"
arch="all"
license="GPL-3.0-or-later"
makedepends="file-dev linux-dev ncurses-dev"
subpackages="$pkgname-doc"
source="https://www.nano-editor.org/dist/v${pkgver%%.*}/$pkgname-$pkgver.tar.xz"
#builddir="$srcdir/$pkgname-$pkgver"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-nls
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 doc/sample.nanorc \
		"$pkgdir"/etc/nanorc

	# Proper syntax highlighting for APKBUILDs
	sed -i "/syntax/s/\"$/\" \"APKBUILD&/" \
		"$pkgdir"/usr/share/nano/sh.nanorc

	rm -rf "$pkgdir"/usr/lib/charset.alias
}

b2sums="52b0eb33727b2f6422ea7f07af2797aad8fd0ecf24fac99836ee71de5565634ee31d77eb981f49ed787fc98ae8c70fe613b7ebebecad62736436900d013ebc76  nano-5.8.tar.xz"

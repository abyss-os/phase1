pkgname=nano
pkgver=5.9
pkgrel=0
pkgdesc="Enhanced clone of the Pico text editor"
url="https://www.nano-editor.org"
arch="all"
license="GPL-3.0-or-later"
makedepends="file-dev linux-dev ncurses-dev"
subpackages="$pkgname-doc"
source="https://www.nano-editor.org/dist/v${pkgver%%.*}/$pkgname-$pkgver.tar.xz"
#builddir="$srcdir/$pkgname-$pkgver"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-nls
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 doc/sample.nanorc \
		"$pkgdir"/etc/nanorc

	# Proper syntax highlighting for APKBUILDs
	sed -i "/syntax/s/\"$/\" \"APKBUILD&/" \
		"$pkgdir"/usr/share/nano/sh.nanorc

	rm -rf "$pkgdir"/usr/lib/charset.alias
}

b2sums="8f229ac8f0071d1833122a71bd2b5892ea0ad503a7edcb106ee0352c16035152112ac00051e18c9e73aef961ab63289d0f9bc4eda0f14df01a271a206817d523  nano-5.9.tar.xz"

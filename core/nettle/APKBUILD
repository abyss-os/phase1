pkgname=nettle
pkgver=3.7.2
pkgrel=0
pkgdesc="A low-level cryptographic library"
url="https://www.lysator.liu.se/~nisse/nettle/"
arch="all"
license="LGPL-2.0-or-later"
makedepends="gmp-dev m4"
subpackages="$pkgname-dev"
source="https://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--sysconfdir=/etc \
		--libdir=/usr/lib \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-fat \
		--enable-shared \
		--disable-openssl \
		--disable-static
	make
	# strip comments in fields from .pc as it confuses pkgconf
	sed -i -e 's/ \#.*//' *.pc
}

check() {
	make -C examples  # required for rsa-encrypt
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

dev() {
    default_dev
    depends="gmp-dev"
}

b2sums="0195f973afd76d33805de4621cd340a041144b24a20ccab03a58749dba82ea12b063f779aeeeb3f063be5e1bb74dec4c8c8f72b3dd01aff033e908a9f534ad01  nettle-3.7.2.tar.gz"

pkgname=nghttp2
pkgver=1.41.0
pkgrel=1
pkgdesc="Experimental HTTP/2 client, server and proxy"
url="https://nghttp2.org"
arch="all"
license="MIT"
makedepends="autoconf automake libtool libev-dev openssl-dev zlib-dev c-ares-dev"
subpackages="$pkgname-doc $pkgname-dev"
source="https://github.com/nghttp2/$pkgname/releases/download/v$pkgver/nghttp2-$pkgver.tar.xz
	remove-mruby-tests.patch"
builddir="$srcdir"/$pkgname-$pkgver

check() {
	cd "$builddir"
	make check
	# integration tests require go, which is only available
	# in community at the moment of writing. Disabling until
	# go is moved into main
#	cd "integration-tests"
#	make itprep
#	make it
}

build() {
	cd "$builddir"
	autoreconf -vif
	CC=$CC CXX=$CXX ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--without-libxml2 \
		--without-neverbleed \
		--without-jemalloc \
		--disable-python-bindings \
		--enable-static \
		--enable-lib-only
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}


pkgname=zlib-ng
pkgver=2.0.5
pkgrel=1
pkgdesc="A compression/decompression Library"
arch="all"
license="zlib"
url="https://github.com/zlib-ng/zlib-ng"
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/zlib-ng/zlib-ng/archive/$pkgver.tar.gz"
replaces="zlib"
provides="zlib so:libz.so.1"


build() {
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--shared \
		--zlib-compat
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make install \
		pkgconfigdir="/usr/lib/pkgconfig" \
		DESTDIR="$pkgdir"
}

b2sums="70a7a4a4f5bcc792fcf5f41487160aa15481bc5512ddd567f59ac96ebd1b8ff7c1edb7e5887f16ee502a75fabb36caf88f0d88563a0d860679b0bfd0e0b9f12a  zlib-ng-2.0.5.tar.gz"

pkgname=abuild
pkgver=4.0.47
pkgrel=0
pkgdesc="Script to build Alpine Packages"
url="https://git.alpinelinux.org/cgit/abuild/"
arch="all"
license="GPL-2.0"
depends="sudo pax-utils openssl apk-tools bsdtar
	 attr pkgconf patch bzip2 xz zlib lzip diffutils flex
	 bison gtar unzip gmake file musl-utils pigz gzip
	 libcxx-dev llvm-dev rsync libtool curl pkgconf zlib-dev
	 openssl-dev musl-dev automake autoconf"
subpackages="abuild-rootbld:_rootbld:noarch $pkgname-doc"
# tests in abuild aren't released yet
options="suid !check"
source="$pkgname-v$pkgver.tar.gz::https://github.com/abyss-os/abuild/archive/v$pkgver.tar.gz"

builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	default_prepare

	cd "$builddir"
	sed -i -e "/^CHOST=/s/=.*/=$CHOST/" abuild.conf
}

build() {
	cd "$builddir"
	make VERSION="$pkgver-r$pkgrel" CC=$CC
}

package() {
	cd "$builddir"

	make install VERSION="$pkgver-r$pkgrel" DESTDIR="$pkgdir"

	install -m 644 abuild.conf "$pkgdir"/etc/abuild.conf
	install -d -m 775 -g abuild "$pkgdir"/var/cache/distfiles
}

_rootbld() {
	pkgdesc="Build packages in chroot"
	depends="abuild bubblewrap git"
	mkdir -p "$subpkgdir"
}

b2sums="9910e0384cc53cee11fa03cd1d9a8f863599ea3676362d1c08f51f92e2f422129bac32f7b9d651df2c371b6bb080277992bf1b4fa6f34954fb412962165557bb  abuild-v4.0.47.tar.gz"

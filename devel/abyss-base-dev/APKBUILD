pkgname=abyss-base-dev
pkgver=0
pkgrel=6
pkgdesc="devel metapackage"
url="https://abyss.run"
arch="noarch"
license="MIT"
options="!check"

case "$CARCH" in
	x86_64) depends_arch="llvm-binutils lld" ;;
	aarch64) depends_arch="llvm-binutils lld" ;;
	mips64*) depends_arch="binutils" ;;
	riscv64) depends_arch="llvm-binutils lld" ;;
esac

depends="abyss-base llvm-dev clang abuild linux-dev musl-dev toolchain git bash $depends_arch"

package() {
	mkdir -p $pkgdir
}


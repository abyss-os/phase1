pkgname="fcft"
pkgver="2.2.91"
pkgrel=1
pkgdesc="A small font loading and glyph rasterization library."
url="https://codeberg.org/dnkl/fcft"
arch="all"
license="MIT"
depends=""
makedepends="meson samurai fontconfig-dev freetype-dev pixman-dev tllist scdoc scdoc-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://codeberg.org/dnkl/fcft/archive/$pkgver.tar.gz"
builddir="$srcdir/$pkgname"
options="!check"

build() {
	meson \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--buildtype=release \
		--default-library=both \
		. output
	samu -C output
}

package() {
	DESTDIR="$pkgdir" samu -C output install
}

b2sums="ac3abbfdd9300fc5a73d7f2b86f8bc42631921d2f9ef54292938ac8e55fe7028b214560d31b31e13bb92e0880f3ba0200c1f8c98dd2c7dd8090c1105cdc504d4  fcft-2.2.91.tar.gz"

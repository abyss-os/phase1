pkgname=gmake
pkgver=4.2.1
pkgrel=2
pkgdesc="GNU make utility to maintain groups of programs"
url="https://www.gnu.org/software/make"
arch="all"
license="GPL-3.0-or-later"
depends=""
makedepends=""
subpackages="$pkgname-doc"
source="http://ftp.gnu.org/gnu/make/make-$pkgver.tar.bz2
	fix-atexit-exit.patch
	fix-glob-dtype.patch
	"
builddir=$srcdir/make-$pkgver

prepare() {
	cd "$builddir"
	update_config_sub
	default_prepare
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-nls \
		--program-prefix=g
	if [ ! -f /usr/bin/make ]; then
		./build.sh
	else
		make
	fi
}

check() {
	cd "$builddir"
	return 0
	[ "$CBUILD" != "$CHOST" ] || (ulimit -n 64 && PERL5LIB=. make check) || return 1
}

package() {
	cd "$builddir"
	if [ ! -f /usr/bin/make ]; then
		./make DESTDIR="$pkgdir" install
	else
		make DESTDIR="$pkgdir" install
	fi
}

aalt() {
	depends="$depends aalt"
	pkgdesc="$pkgdesc (AAlt registration files)"
	install_if="aalt ${subpkgname%-aalt}=$pkgver-r$pkgrel"

	DESTDIR="$subpkgdir" aalt-bin -R -g gnu -p make -f /usr/bin/gmake
}


pkgname=nodejs
pkgver=14.1.0
pkgrel=0
pkgdesc="JavaScript runtime built on V8 engine"
url="https://nodejs.org/"
arch="all"
license="MIT"
depends="ca-certificates"
makedepends="linux-dev python3 libuv-dev c-ares-dev nghttp2-dev openssl-dev"
subpackages="$pkgname-dev $pkgname-doc"
source="https://nodejs.org/dist/v$pkgver/node-v$pkgver.tar.gz"
builddir="$srcdir/node-v$pkgver"

build() {
	cd "$builddir"

	case "$CARCH" in
		mips*) _carchflags="--with-mips-arch-variant=r2 --with-mips-float-abi=soft";;
	esac

	# soon (tm)
	# --shared-brotli \

	./configure --prefix=/usr \
		$_carchflags \
		--shared-zlib \
		--shared-libuv \
		--shared-cares \
		--shared-nghttp2 \
		--shared-openssl \
		--openssl-use-def-ca-store \
		--with-intl=small-icu

	make BUILDTYPE=Release
}


# TODO Run provided test suite.
check() {
	cd "$builddir"/out/Release

	./node -e 'console.log("Hello, world!")'
	./node -e "require('assert').equal(process.versions.node, '$pkgver')"
}

package() {
	cd "$builddir"

	make DESTDIR="$pkgdir" install

	# Remove npm, it's provided by main/nodejs package.
	rm -r "$pkgdir"/usr/lib/node_modules
	rm "$pkgdir"/usr/bin/npm "$pkgdir"/usr/bin/npx
}

b2sums="25b03f412ea36470cb9e454dbe583349a8230bd8f2fc540f4de089f54c7189f130c99241e42578c9708310caee45c157a29fcf2848c08c5319995d4de516e7f3  node-v14.1.0.tar.gz"

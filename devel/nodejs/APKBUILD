pkgname=nodejs
pkgver=14.1.0
pkgrel=0
pkgdesc="JavaScript runtime built on V8 engine"
url="https://nodejs.org/"
arch="all"
license="MIT"
depends="ca-certificates"
makedepends="linux-dev python3 libuv-dev c-ares-dev nghttp2-dev openssl-dev icu-dev brotli-dev ninja"
subpackages="$pkgname-dev $pkgname-doc"
source="https://nodejs.org/dist/v$pkgver/node-v$pkgver.tar.gz
	restore-mips64-configure_py.patch"
builddir="$srcdir/node-v$pkgver"

build() {
	cd "$builddir"

	case "$CARCH" in
		mips64) _carchflags="--with-mips-float-abi=soft";;
	esac

	./configure --prefix=/usr \
		$_carchflags \
		--shared-brotli \
		--shared-zlib \
		--shared-libuv \
		--shared-cares \
		--shared-nghttp2 \
		--shared-openssl \
		--openssl-use-def-ca-store \
		--with-intl=system-icu \
		--ninja

	make BUILDTYPE=Release
}


# TODO Run provided test suite.
check() {
	cd "$builddir"/out/Release

	./node -e 'console.log("Hello, world!")'
	./node -e "require('assert').equal(process.versions.node, '$pkgver')"
}

package() {
	make DESTDIR="$pkgdir" BUILDTYPE=Release install

	# Remove npm, it's provided by main/nodejs package.
	rm -r "$pkgdir"/usr/lib/node_modules
	rm "$pkgdir"/usr/bin/npm "$pkgdir"/usr/bin/npx
}


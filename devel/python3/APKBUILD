pkgname=python3
pkgver=3.9.5
_basever="${pkgver%.*}"
pkgrel=3
pkgdesc="A high-level scripting language"
url="https://www.python.org"
arch="all"
license="custom"
provides="python"
subpackages="$pkgname-dev $pkgname-doc"
makedepends="expat-dev openssl-dev zlib-dev ncurses-dev bzip2-dev xz-dev sqlite-dev libffi-dev tcl-dev linux-dev gdbm-dev readline-dev mpdecimal-dev"
source="https://www.python.org/ftp/python/$pkgver/Python-$pkgver.tar.xz"
builddir="$srcdir/Python-$pkgver"

prepare() {
	default_prepare

	# force system libs
	rm -r Modules/expat \
		Modules/_ctypes/darwin* \
		Modules/_ctypes/libffi*

	case "${CARCH}" in
		riscv64) _opts="--disable-optimizations --disable-profiling";;
		mips64*) _opts="--enable-optimizations";;
		*) _opts="--enable-optimizations";;
	esac

	export CFLAGS="-fno-semantic-interposition"
	./configure \
        --build=$CTARGET \
        --host=$CTARGET \
        --target=$CTARGET \
		--prefix=/usr \
		--libdir=/usr/lib \
		--enable-ipv6 \
		--enable-loadable-sqlite-extensions \
		--enable-shared \
		--with-computed-gotos \
		--with-dbmliborder=gdbm:ndbm \
		--with-system-expat \
        --with-system-libmpdec \
		--without-ensurepip \
		--with-libm="" \
		$_opts
}

build() {

	# set thread stack size to 1MB so we don't segfault before we hit
	# sys.getrecursionlimit()
	make EXTRA_CFLAGS="$CFLAGS -DTHREAD_STACK_SIZE=0x100000"
}

package() {
	cd "$builddir"
	mkdir -p $pkgdir/usr/lib
	make -j1 DESTDIR="$pkgdir" EXTRA_CFLAGS="$CFLAGS" install maninstall
	install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
	# those are provided by python3-tkinter
	rm -rf $pkgdir/usr/bin/idle* $pkgdir/usr/lib/python*/idlelib \
		$pkgdir/usr/lib/python*/tkinter $pkgdir/usr/lib/python*/*/test \
		$pkgdir/usr/lib/python*/*/tests \
		$pkgdir/usr/lib/python*/distutils/command/*.exe

	ln -sv /usr/bin/python3 $pkgdir/usr/bin/python
}

b2sums="0072376ac69728436ee422da58c1680170cd60c76ac7d623d7a29c9001e6acace1a8d75a1805e65c9b11a30c55c9e67ed66712ec22b0b94ee6873995c935141d  Python-3.9.5.tar.xz"
